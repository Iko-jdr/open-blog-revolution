---
const { queryFilters, heading, nbPosts, articleHeaderContentClass } = Astro.props;

import QueryPosts from 'src/components/query-posts.astro';

import { CONFIG } from "@config";

import PostFooterText from "../data/post-footer.mdx"


---
<footer class="article-footer mt-lg">
    <PostFooterText />
    {CONFIG.POST_THUMBNAILS &&
        <QueryPosts queryFilters={queryFilters} heading={heading} nbPosts={nbPosts} articleHeaderContentClass={articleHeaderContentClass}  />
    }
</footer>